<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create new post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 bg-zinc-500 hover:bg-zinc-300" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 rounded-md bg-zinc-700 mt-5" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 h-30 px-3 py-2 rounded-md bg-zinc-700 mt-5" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md bg-red-700 hover:bg-red-800 mt-5" type="submit" value="Create Post" >
    </form>

</div>

