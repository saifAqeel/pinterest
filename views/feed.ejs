<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-6 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-60">
                <div class="w-full h-80 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">                
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                <h3 class="text-sm opacity-50"><%= elem.user.username %></h3>
            </div>
        <%})%>
    </div>
</div>



<% include ./partials/footer.ejs %>